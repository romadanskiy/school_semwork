@page
@using SchoolProj.Models
@model IndexModel
@{
    ViewData["Title"] = "Главная страница";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1>BigBankTheory - инвестируй в себя</h1>
        <p class="lead text-muted">Теория - это просто!<br>Начни учиться уже сейчас</p>
        <p>
            <a href="#" class="btn btn-primary btn-lg my-2">Подобрать курс</a>
        </p>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">
            
            @foreach (var course in new CourseDao().GetAllWithSubjects())
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <svg class="bd-placeholder-img card-img-top" width="100%" height="225"
                             xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false"
                             role="img">
                            <rect width="100%" height="100%" fill="#003B7A"/>
                            <text x="50%" y="50%" fill="#eceeef" dy=".3em">@course.Name</text>
                        </svg>
                        <div class="card-body">
                            <p class="card-text">@course.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <a class="btn btn-outline-primary btn-sm" href="#">Подробнее</a>
                                <small class="text-muted">@course.NumberOfStudents участников</small>
                            </div>
                        </div>
                        <ul>
                            <li>Информатика</li>
                            <li>Программирование</li>
                        </ul>
                    </div>
                </div>
            }
            
