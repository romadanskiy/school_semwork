@model SchoolProj.Models.Course

<div class="col-md-4">
    <div class="card mb-4 shadow-sm">
        @*
        <svg class="bd-placeholder-img card-img-top" width="100%" height="225"
             xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false"
             role="img">
            <rect width="100%" height="100%" fill="#003B7A"/>
            <text x="50%" y="50%" fill="#eceeef" dy=".3em">@Model.Name</text>
        </svg>
        *@
        <div class="bd-placeholder-img card-img-top my-card">
            <div class="my-card-placeholder">@Model.Name</div>
        </div>
        <div class="card-body">
            <p class="card-text">@Model.Description</p>
            <div class="d-flex justify-content-between align-items-center">
                <a class="btn btn-outline-primary btn-sm" href="CoursePage/@Model.Id">Подробнее</a>
                <small class="text-muted participants">участников: @Model.NumberOfStudents</small>
            </div>
        </div>
        <ul>
            @foreach (var subject in Model.Subjects)
            {
                <li>@subject</li>
            }
        </ul>
    </div>
</div>