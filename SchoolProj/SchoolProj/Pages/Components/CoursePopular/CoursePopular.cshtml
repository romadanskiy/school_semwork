@model SchoolProj.Models.Course

<div class="card mb-4 shadow-sm">
    <div class="bd-placeholder-img card-img-top my-card popular-card">
        <div class="my-card-placeholder popular-placeholder">@Model.Name</div>
    </div>
    <div class="card-body">
        <p class="card-text">@Model.Description</p>
        <div class="d-flex justify-content-between align-items-center">
            <a class="btn btn-outline-primary btn-sm" href="CoursePage/@Model.Id">Подробнее</a>
            <small class="text-muted participants">участников: @Model.NumberOfStudents</small>
        </div>
    </div>
</div>
