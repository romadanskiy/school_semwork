@page
@model SchoolProj.Pages.PurchasesHistory

@{
    ViewData["Title"] = "История покупок";
}

@{
    Layout = "Shared/_Layout";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1>Моя история покупок</h1>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach (var purchase in Model.Purchases.OrderByDescending(p => p.PurchaseDate))
            {
                <div class="col-md-4">
                    @await Component.InvokeAsync("PurchaseItem", purchase)
                </div>
            }
        </div>
    </div>
</div>