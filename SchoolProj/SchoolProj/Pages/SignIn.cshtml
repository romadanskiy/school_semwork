@page
@model SchoolProj.Pages.SignIn

@{
    ViewData["Title"] = "Вход";
}

@{
    Layout = "Shared/_Layout";
}

<div class="center-block">
    <form class="signin-form simple-border" name="signIn" onsubmit="return false;">
        <h2>Вход</h2>
        <label for="inputLogin" class="sr-only">Логин</label>
        <input name="name" type="text" id="inputLogin" class="form-control" placeholder="Логин" required="" autofocus="">
        <label for="inputPassword" class="sr-only">Пароль</label>
        <input name="password" type="password" id="inputPassword" class="form-control" placeholder="Пароль" required="">
        <div class="checkbox">
            <label class="remember-label"><input type="checkbox" value="remember-me"> Запомнить меня</label>
        </div>
        <div class="signup-link"><a href="@Url.Page("./SignUp")">Зарегестрироваться</a></div>
        <button name="remember" class="btn btn-lg btn-primary btn-block" type="submit" onclick="signin()">Войти</button>
    </form>
</div>